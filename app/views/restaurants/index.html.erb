<h1 style ="text-align:center">Restaurants</h1><br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
       <th>Phone Number</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
        
        <td><%= link_to "Show", restaurant_path(restaurant) %></td>
      </tr>  
    <% end %>
  </tbody>
</table>

<%= link_to "add a new restaurant", new_restaurant_path %>